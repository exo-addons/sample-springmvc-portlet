    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/sample-springmvc-portlet</outputDirectory>
      <includes>
        <include>${project.groupId}:sample-springmvc-portlet:war</include>
      </includes>
      <outputFileNameMapping>sample-springmvc-portlet.war</outputFileNameMapping>
    </dependencySet>
  </dependencySets>
</assembly>