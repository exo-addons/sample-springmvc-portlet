<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet
		http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	version="2.0">

	<portlet>
		<portlet-name>sample-springmvc</portlet-name>
		<display-name xml:lang="fr">Sample Spring MVC</display-name>
		<display-name xml:lang="en">Sample Spring MVC</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
	    <supported-locale>en</supported-locale>
	    <supported-locale>fr</supported-locale> 
	    <portlet-info>
	      <title>Sample Spring MVC</title>
	      <short-title>Sample Spring MVC</short-title>
	    </portlet-info>
	</portlet>

</portlet-app>
